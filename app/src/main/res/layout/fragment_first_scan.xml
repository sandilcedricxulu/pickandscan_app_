<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".ShopFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:text="Scanning Item(s)"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/manual_barcode_imageView"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="93dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="155dp"
            android:background="@color/colorAccent"
            android:src="@drawable/barcodemanual" />


        <TextView
            android:id="@+id/enter_manual_barcode1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:layout_marginRight="0dp"
            android:gravity="center"
            android:text="Enter Barcode Manually"
            android:textColor="@color/colorPrimary"
            android:textSize="17dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>

    <TextView
        android:id="@+id/scan_with_camera_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginRight="0dp"
        android:gravity="center"
        android:text="Scan with barcode camera"
        android:textColor="@color/colorPrimary"
        android:textSize="17dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="449dp"
        android:background="@color/backgroundColor">

        <Button
            android:id="@+id/FirsToScan"
            android:layout_width="150dp"
            android:layout_height="46dp"
            android:layout_centerInParent="true"
            android:background="@drawable/textfield_rounded"
            android:text="Scan With Camera"
            android:textSize="13dp"
            android:textColor="@color/colorPrimary" />

    </RelativeLayout>


</RelativeLayout>