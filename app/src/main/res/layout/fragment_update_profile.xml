<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Update Profile"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/firstNameAlter"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="100dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="15dp"
            android:paddingLeft="13dp"
            android:background="@drawable/textfield_rounded"
            android:drawableLeft="@drawable/nameicon"
            android:hint="   First Name"
            android:textColorHint="@color/colorPrimary" />

        <EditText
            android:id="@+id/lastNameAlter"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="180dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="15dp"
            android:paddingLeft="13dp"
            android:background="@drawable/textfield_rounded"
            android:drawableLeft="@drawable/nameicon"
            android:hint="   LastName"
            android:textColorHint="@color/colorPrimary" />

        <EditText
            android:id="@+id/cellNumberAlter"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="260dp"
            android:ems="10"
            android:inputType="number"
            android:maxLength="10"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="15dp"
            android:paddingLeft="13dp"
            android:background="@drawable/textfield_rounded"
            android:drawableLeft="@drawable/phoneiconn"
            android:hint="    Change Phone Number"
            android:textColorHint="@color/colorPrimary" />

        <Button
            android:id="@+id/updateProfileBtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Upddate Profile"
            android:textSize="17dp"
            android:textColor="#fff"
            android:background="@drawable/button_rounded"
            android:layout_marginTop="340dp"/>

    </RelativeLayout>


</RelativeLayout>